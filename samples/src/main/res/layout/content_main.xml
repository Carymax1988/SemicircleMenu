<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:semicirclemenu="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <com.liujiaqi.library.SemicircleMenuView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@android:color/darker_gray"
        semicirclemenu:intersize="80dp"
        semicirclemenu:outelevation="3dp"
        semicirclemenu:rectmarge="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/view3">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"/>
    </com.liujiaqi.library.SemicircleMenuView>

    <com.liujiaqi.library.SemicircleMenuView
        android:id="@+id/view2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="#FFABCDEF"
        semicirclemenu:intersize="50dp"
        semicirclemenu:rectmarge="2dp"
        android:layout_above="@id/view3">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
    </com.liujiaqi.library.SemicircleMenuView>

    <com.liujiaqi.library.SemicircleMenuView
        android:id="@+id/view1"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:background="#FFFEDCBA"
        semicirclemenu:intersize="50dp"
        semicirclemenu:rectmarge="2dp"
        android:layout_above="@id/view2">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"/>
    </com.liujiaqi.library.SemicircleMenuView>
</RelativeLayout>
